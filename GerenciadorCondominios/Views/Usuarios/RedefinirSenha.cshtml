@model GerenciadorCondominios.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<div class="collection with-header">
    <div class="collection-header">
        <h5>Redefina sua senha</h5>
    </div>

    <form asp-action="RedefinirSenha">
        <div class="collection-item">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>
            <div class="row">
                <div class="col s12">
                    <div class="blue-text text-darken-3">Olá, @Model.Email ! Em seu primeiro acesso, você deve redefinir sua senha</div>
                    <input type="hidden" asp-for="Email" />
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <input asp-for="Senha" type="password" class="validate" id="senha" />
                    <label asp-for="Senha" id="senha"></label>
                    <span asp-validation-for="Senha" class="red-text text-darken-4"></span>
                </div>
            </div>
        </div>

        <div class="collection-item">
            <button type="submit" class="waves-effect waves-light btn-small green darken-4">Redefinir</button>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

